{
  "manifest_version": 3,
  "name": "Synonym Finder",
  "version": "2.0",
  "description": "Select a word on any page to find its synonyms.",
  "permissions": [],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
      
    }
  ],
  "action": {
    "default_title": "Synonym Finder"
  }
}
